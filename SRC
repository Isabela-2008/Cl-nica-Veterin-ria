create database ClinicaVeterinaria;
use ClinicaVeterinaria;

create table if not exists clientes (
cliente_id int auto_increment primary key,
nome varchar(100),
telefone varchar(15),
email varchar(100),
endereco varchar(255)
);

create table if not exists aniamis (
animal_id int auto_increment primary key,
cliente_id int,
nome varchar(100),
especie varchar(50),
raca varchar(50),
data_nascimento date,
sexo enum ("m","f")
);

create table if not exists veterinarios (
veterinario_id int auto_increment primary key,
nome varchar(100),
especialidade varchar(50),
telefone varchar(15),
email varchar(100)
);

create table if not exists consultas (
consultas_id int auto_increment primary key,
animal_id int,
veterinario_id int,
data_consulta datetime,
diagnostico text 
);

create table if not exists tratamentos (
tratamento_id int auto_increment primary key,
consulta_id int,
descricao text,
medicamento varchar(100),
dose varchar(50)
);

create table if not exists pagamentos (
pagamento_id int auto_increment primary key,
consulta_id int,
valor decimal(10,2),
data_pagamento date,
metodo_pagamento enum("dinheiro","cartao","transferencia")
);

